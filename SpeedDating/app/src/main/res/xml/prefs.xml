    <PreferenceCategory android:title="Other Information">
        <EditTextPreference
            android:key="occupations"
            android:summary="Insert your occupation"
            android:title="Occupations" />

        <EditTextPreference
            android:ellipsize="end"
            android:key="interests"
            android:summary="Insert your interests seperated by comma"
            android:title="Interests" />

        <ListPreference
            android:entries="@array/relationshipValues"
            android:entryValues="@array/relationshipValues"
            android:key="relationshipStatus"
            android:title="Relationship Status" />

        <CheckBoxPreference
            android:key="relationshipPublic"
            android:title="Make your relationship status public" />


        <ListPreference
            android:key="country"
            android:summary="Choose country"
            android:title="Country" />
        <CheckBoxPreference
            android:key="countryPublic"
            android:title="Make your country public" />

    </PreferenceCategory>



</PreferenceScreen>
