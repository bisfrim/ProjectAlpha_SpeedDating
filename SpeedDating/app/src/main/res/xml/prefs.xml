<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="I am">
        <SwitchPreference
            android:key="switch_male_pref"
            android:title="Male" />
        <SwitchPreference
            android:key="switch_female_pref"
            android:title="Female" />

    </PreferenceCategory>



    <PreferenceCategory android:title="Show me?">

        <CheckBoxPreference
            android:key="pref_male"
            android:summaryOff="Off"
            android:summaryOn="On"
            android:title="Male" />

        <CheckBoxPreference
            android:key="pref_female"
            android:summaryOff="Off"
            android:summaryOn="On"
            android:title="Female" />

    </PreferenceCategory>

